<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/drawerItemMainRL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorLightBackground"
                android:orientation="horizontal"
                android:padding="4dp">

    <ImageView
        android:id="@+id/drawerItemIconIV"
        android:layout_width="@dimen/size_42dp"
        android:layout_height="@dimen/size_42dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_24dp"
        android:src="@drawable/com_facebook_tooltip_black_bottomnub"
        />

    <TextView
        android:id="@+id/drawerItemTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="96dp"
        tools:text="Nearby now"/>

    <TextView
        android:id="@+id/drawerItemCounterTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="5"
        tools:visibility="visible"/>

</RelativeLayout>