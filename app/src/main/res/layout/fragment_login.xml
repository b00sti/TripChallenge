<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/userIconImageView"
            android:layout_width="@dimen/view_huge"
            android:layout_height="@dimen/view_huge"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_account_box_white_36dp"
            tools:src="@drawable/ic_account_box_white_36dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailEditTextL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:theme="@style/AppThemeWithLightHint">

            <EditText
                android:id="@+id/emailEditText"
                style="@style/TextViewLightLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableStart="@drawable/ic_email_white_36dp"
                android:inputType="textEmailAddress"
                android:padding="@dimen/spacing_small"
                tools:hint="@string/email_hint"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordEditTextL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:theme="@style/AppThemeWithLightHint">

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/TextViewLightLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableStart="@drawable/ic_vpn_key_white_36dp"
                android:inputType="textPassword"
                android:padding="@dimen/spacing_small"
                tools:hint="@string/password_hint"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/loginButton"
            style="@style/ButtonHalfTransparent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_normal"
            android:layout_margin="@dimen/spacing_large"
            android:padding="@dimen/spacing_pretty_tiny"
            android:text="@string/login_button_label"
            tools:text="@string/login_button_label"/>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            style="@style/TextViewLightSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/login_forgot_password"
            tools:text="@string/login_forgot_password"/>

        <TextView
            android:id="@+id/createAccountTextView"
            style="@style/TextViewLightNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/no_account_yet_create_one"
            tools:text="@string/no_account_yet_create_one"/>

    </LinearLayout>

</RelativeLayout>