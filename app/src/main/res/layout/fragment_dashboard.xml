<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_main_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.b00sti.tripchallenge.main.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.b00sti.tripchallenge.utils.helpers.crescento_view.CrescentoImageView
            android:id="@+id/crescentoImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper3_optimized"
            app:curvature="40dp"
            app:curvatureDirection="inward"
            app:gradientDirection="bottom_to_top"
            app:gradientEndColor="#FF5722"
            app:gradientStartColor="#00000000"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="#ff5722"
            app:elevation="10dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/connectB"
            style="@style/TextViewLightNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/crescentoImageView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Connect"/>

        <TextView
            android:id="@+id/tvStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connectB"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="STORY"
            android:textColor="@color/colorLightText"/>

        <TextView
            android:id="@+id/tvStoryLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStory"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="The Rebellion makes a risky move to steal the plans to the Death Star. Setting up the epic saga to follow."
            android:textColor="@color/colorLightText"
            android:textSize="13sp"/>

    </LinearLayout>

</RelativeLayout>