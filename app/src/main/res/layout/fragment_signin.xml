<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/userIconImageView"
            android:layout_width="@dimen/view_large"
            android:layout_height="@dimen/view_large"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_account_box_white_36dp"
            tools:src="@drawable/ic_account_box_white_36dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/nickEditTextL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/nick"
            android:theme="@style/AppThemeWithLightHint">

            <EditText
                android:id="@+id/nickEditText"
                style="@style/TextViewLightLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableStart="@drawable/ic_account_box_white_36dp"
                android:inputType="text"
                android:padding="@dimen/spacing_small"
                tools:hint="@string/nick"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailEditTextL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/email_hint"
            android:theme="@style/AppThemeWithLightHint">

            <EditText
                android:id="@+id/emailEditText"
                style="@style/TextViewLightLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableStart="@drawable/ic_email_white_36dp"
                android:inputType="textEmailAddress"
                android:padding="@dimen/spacing_small"
                tools:hint="@string/email_hint"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordEditTextL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/password_hint"
            android:theme="@style/AppThemeWithLightHint">

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/TextViewLightLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableStart="@drawable/ic_vpn_key_white_36dp"
                android:inputType="textPassword"
                android:padding="@dimen/spacing_small"
                tools:hint="@string/password_hint"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/createAccountButton"
            style="@style/ButtonHalfTransparent"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_normal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_large"
            android:gravity="center"
            android:padding="@dimen/spacing_pretty_tiny"
            android:text="@string/create_account"
            tools:text="@string/create_account"/>

        <TextView
            android:id="@+id/loginTextView"
            style="@style/TextViewLightNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/already_a_member_login"
            tools:text="@string/already_a_member_login"/>

    </LinearLayout>

</RelativeLayout>