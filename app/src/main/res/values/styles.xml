<resources>

    <style name="Theme.Custom" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MainWithoutActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="CustomActionBar2" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="AppThemeWithLightHint" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorLightText</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextViewLightSmall">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="TextViewLightNormal">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewLightLarge">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonHalfTransparent">
        <item name="android:background">@color/mediumTransparent</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchVertical" parent="Match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHorizontal" parent="Match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapVertical" parent="Wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapHorizontal" parent="Wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidthVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightVertical" parent="MatchHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthHorizontal" parent="MatchWidth">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeightHorizontal" parent="MatchHeight">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
